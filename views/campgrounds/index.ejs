<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<h1>All Campgrounds</h1>

<div>
  <a href="/campgrounds/new" class="row mb-3 col-6 offset-5">Add a Campground</a>
</div>
<div class="row">
  <ul class="row">
    <% for (let campground of campgrounds) { %>
      <div class="card mb-3 col-lg-5 col-sm-12" id="index-card">
        <div class="row">
          <div class="col-md-4 index-card-img">
            <% if (campground.images.length) { %>
              <img
                class="img-fluid"
                src="<%= campground.images[0].url %>"
                alt=""
                crossorigin
              />
            <% } else { %>
              <img
                class="img-fluid"
                src="https://res.cloudinary.com/dudoovhhx/image/upload/v1675180412/YelpCamp/JLCG_tents_Teewinot_2008_mattson_1_senv28.jpg"
                alt=""
                crossorigin
              />
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text text-truncate" style="max-width: 600px;"><%= campground.description %></p>
              <p class="card-text">
                <small class="text-muted"> <%= campground.location %></small>
              </p>
            </div>

            <a
              class="btn btn-primary mb-3"
              href="/campgrounds/<%= campground._id %>"
              >View <%= campground.title %></a
            >
          </div>
        </div>
      </div>
    <% } %>
  </ul>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>